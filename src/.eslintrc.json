{
    "env": {
        "browser": true,
        "es6": true
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:prettier/recommended"
    ],
    "rules": {
        "linebreak-style": ["error", "unix"],
        "no-underscore-dangle": "off",
        "react/jsx-props-no-spreading": "off",
        "implicit-arrow-linebreak": "off"
    },
    "settings": {
        "react": {
            "version": "detect"
        },
        "linkComponents": [
            "Hyperlink",
            {"name": "NavLink", "linkAttribute": "href"}
        ]
    }
}
